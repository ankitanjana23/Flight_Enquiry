<style>
    .maincontainer{
        background:#22b7c1 ;
        width:100vw;
        height:100vh;
        display:flex;
        justify-content: center;
        align-items:center;
    }
    .box
    {
        width:80%;
        height:auto;
         background:#FFF;
         border-radius: 10px;
         padding: 15px; 
         
    }
    .heading{
        font-size:20px;
        letter-spacing: 1px;
        color: #273c75;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .daysstyle{
        display:flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
    .buttonstyle{
      width:100%;
    }
    </style>
    <html>
        <head>
            <title>Flight Interface </title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
            
        </head>
        <body>
            <div class="maincontainer">
                <div class="box">
                  <div class="heading">
                    <a href="/flight/flightinterface"> <img src="/images/addrecord.jpg" width="30" ></a>
                    <img src="/images/flighticon.png" width="50" >
                   List Of  Flights
                   
                 </div>

            <table class="table table-hover">
              
                <thead>
                  <tr>
                   
                    <th scope="col">Flight Name</th>
                    <th scope="col">Days/<br>Seats</th>
                    <th scope="col">Source City</th>
                    <th scope="col">Destination City</th>
                    <th scope="col">Company</th>
                    <th scope="col">Logo</th>
                    <th scope="col">Edit/Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% data.map((item)=>{%>
                    <th scope="row">
                      <%=item.flightname %>
                      <br>
                      <%=item.types %>
                    </th>
                    <td>
                     Seats: <%=item.totalseates %>
                      <br>
                      <%=item.days %>
                    </td>
                    <td>
                    <%=item.source %>
                    <br>
                    <%=item.departuretime %>
                    </td>
                    <td> 
                     <%=item.destination %>
                      <br>
                      <%=item.arrivaltime %>
                    </td>
                    <td>
                      <%=item.company %>
                     </td>
                     <td>
                      <a href="/flight/searchbyidforimage?fid=<%=item.flightid%>"><img  src="/images/<%=item.logo %>" width='30' /></a>
                     </td>
                     <td>
                      <a href="/flight/searchbyid?fid=<%=item.flightid%>">
                     Edit/Delete
                    </a>
                     </td>
                  </tr>
                  <% }) %>
                  
                </tbody>
              </table>
            </div>
        </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
</html>