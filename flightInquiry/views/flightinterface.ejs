
         
    <style>
    .maincontainer{
        background:#273c75 ;
        width:100vw;
        height:100vh;
        display:flex;
        justify-content: center;
        align-items:center;
    }
    .box
    {
        width:50%;
        height:auto;
         background:#FFF;
         border-radius: 10px;
         padding: 15px; 
         
    }
    .heading{
        font-size:20px;
        letter-spacing: 1px;
        color: #0000FF;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .daysstyle{
        display:flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
    .buttonstyle{
      width:100%;
    }
    </style>
    <html>
        <head>
            <title>Flight Interface </title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
            <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
            <script src="/javascripts/project.js"></script>

        </head>
        
            <div class="maincontainer">
                <div class="box">
         <div class="heading">
          <a href="/flight/displayallflights"> <img src="/images/displayall.png" width="30" ></a>
            <img src="/images/flighticon.png" width="50" >
            Flight Interface
           
         </div>
         <form action="/flight/flightsubmit" method="post" enctype="multipart/form-data" class="row g-3">
          <div class="col-md-6">
              <label for="flightname" class="form-label"><b> Flight Name</b></label>
              <input type="text" class="form-control" name="flightname" id="flightname">
            </div> 
              <div class="col-md-6">
                <label for="flighttype" class="form-label"><b>Flight Type</b></label>
                <select id="flighttype" name="flighttype" class="form-select">
                  <option selected>Choose Type...</option>
                  <option>Economy </option>
                  <option>Business</option>
                  <option>Economy/Business </option>
                </select>
              </div>
              <div class="col-md-4">
              <label for="noofseats" class="form-label"><b> Total Seats</b></label>
                <input type="text" class="form-control" name="noofseats" id="noofseats">
              </div>
            
            
                <div class="col-md-8 ">
                <label for="days" class="form-label"><b>Select Flight Days</b></label>
                <div class="daysstyle">
                <div class="form-chek">
                <input class="form-check-input" type="checkbox" name="days" value="Mon" id="days">
                <lable class="form-check-label" for="days">
                    Mon
                </lable>
                </div>
                <div class="form-chek">
                <input class="form-check-input" type="checkbox"  name="days" value="Tue" id="days">
                <lable class="form-check-label" for="days">
                    Tue
                </lable>
                </div>
                <div class="form-chek">
                    <input class="form-check-input" type="checkbox"  name="days" value="Wed" id="days">
                    <lable class="form-check-label" for="days">
                        wed
                    </lable>
                    </div>
                    <div class="form-chek">
                        <input class="form-check-input" type="checkbox"  name="days" value="Thu" id="days">
                        <lable class="form-check-label" for="days">
                            Thu
                        </lable>
                        </div>
                        <div class="form-chek">
                            <input class="form-check-input" type="checkbox"  name="days" value="Fri" id="days">
                            <lable class="form-check-label" for="days">
                                Fri
                            </lable>
                            </div>
                            <div class="form-chek">
                                <input class="form-check-input" type="checkbox"  name="days" value="Sat" id="days">
                                <lable class="form-check-label" for="days">
                                    Sat
                                </lable>
                                </div>
                                <div class="form-chek">
                                    <input class="form-check-input" type="checkbox"  name="days" value="Sun" id="days">
                                    <lable class="form-check-label" for="days">
                                        Sun
                                    </lable>
                                    </div>
                                </div>
                </div>
                <div class="col-md-3">
                    <label for="source" class="form-label"><b>Source City</b></label>
                    <select id="source" name="sourcecity" class="form-select">
                      <option selected>Source City...</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label for="departuretime" class="form-label"><b> Departure Time</b></label>
                      <input type="time" class="form-control" name="departuretime" id="departuretime">
                    </div>
                  <div class="col-md-3">
                    <label for="destination" class="form-label"><b>Destination City</b></label>
                    <select id="destination" name="destinationcity" class="form-select">
                      <option selected>Destination City...</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label for="arrivaltime" class="form-label"><b>Arraival Time</b></label>
                      <input type="time" class="form-control" name="arrivaltime" id="arrivaltime">
                    </div>
                    <div class="col-md-6">
                        <label for="company" class="form-label"><b>Company</b></label>
                          <input type="text" class="form-control" name="company" id="company">
                        </div>
                        <div class="col-md-6">
                            <label for="logo" class="form-label"><b>Logo</b></label>
                              <input type="file" class="form-control" name="logo" id="logo">
                            </div>
                            <div class="col-md-6">
                              <button type="submit" class="btn btn-secondary buttonstyle">Submit</button>
                               
                              </div>
                              <div class="col-md-6">
                                <button type="reset" class="btn btn-secondary buttonstyle">Reset</button>
                                  </div>
                                  <div class="col-md-12" style="display:flex; justify-content:center;padding:5px;font-weight:bold;">
                                    <%=message %>
                                  </div>
                        </form>
                </div>
    </div>
    
     
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
    </html>