<style>
    .maincontainer{
        background:#273c75 ;
        width:100vw;
        height:100vh;
        display:flex;
        justify-content: center;
        align-items:center;
    }
    .subbox
    {
        width:100vw;
        height:100vh;
         
         
    }
    .box
    {
        width:70%;
        height:auto;
        padding:20px;
        background-color: #FFF;
        border-radius: 20px;
        margin-top: 50px;
         
    }
    .heading{
        font-size:20px;
        letter-spacing: 1px;
        color: #273c75;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .daysstyle{
        display:flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
    .buttonstyle{
      width:100%;
    }
    </style>
    <html>
        <head>
            <title>Flight Interface </title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
        </head>
        <div class="maincontainer">
            <div class="subbox">
            <form action="/admin/chkadminlogin" method="post" class="row g-3">
                <div class="col-md-6" >
                 <img  src="/images/indigosideimage.jpg" width="750" height="600">   
                
                </div>
                    <div class="col-md-6" style="background:#273c75 ; padding:10px; margin-top: 10px; display: flex;flex-direction: column;align-items: center; justify-content: center;" >
                        <div style="color:#FFF;  font-weight:bold; font-size:28px;">
                        Administrator Login
                    </div>
                    <div class="box">
                  <div class="col-md-12">
                    <label for="email_mobile" class="form-label"><b> Email Address/Mobile Number </b></label>
                    <input type="text" class="form-control" name="email_mobile" id="email_mobile">
                  
                  </div>
                  <div class="col-md-12">
                    <label for="pwd" class="form-label"><b> Password </b></label>
                    <input type="password" class="form-control" name="pwd" id="pwd">
                  
                  </div>
                  <div class="col-md-12" style="margin-top: 20px;">
                    <button type="submit" class="btn btn-secondary buttonstyle">Login</button>
                     
                    </div>
                    <div class="col-md-12" style="color:red; margin-top: 20px; font-size:18px; font-weight: bold;text-align:center;">
                      <%= message %>
                    </div>
                   
                    </div>
                    </form> 
              </div>
            </div>
              <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
              </html>